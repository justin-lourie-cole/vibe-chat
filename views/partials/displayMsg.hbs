<div class="msg">
    <p>{{message}}</p>
    
    <form action="/likemsg/{{id}}" method="POST">
        {{#if like}}

        <div class="like on"></div>

        {{else}}
        
        <div class="like off"></div>
            
        {{/if}} 
        <input type="hidden" name="like" value="{{like}}">
        <input type="submit" value="">
    </form>
    <div class="msg_details">
        <p class="user">{{user}}</p>
    <p class="createdAt">{{createdAt}}</p>
    </div>
</div>